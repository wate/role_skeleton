---
role_name_check: 1
dependency:
  name: galaxy
driver:
  name: ${DRIVER_NAME:-docker}
platforms:
  - name: bookworm
    groups:
      - family_debian
    children:
      - debian
    # driver:docker
    image: geerlingguy/docker-debian12-ansible:latest
    command: ${MOLECULE_DOCKER_COMMAND:-""}
    volumes:
      - /sys/fs/cgroup:/sys/fs/cgroup:rw
    cgroupns_mode: host
    privileged: true
    pre_build_image: true
    # driver:vagrant
    box: wate/debian-12
    memory: 1024
    cpus: 1
  - name: bullseye
    groups:
      - family_debian
    children:
      - debian
    # driver:docker
    image: geerlingguy/docker-debian11-ansible:latest
    command: ${MOLECULE_DOCKER_COMMAND:-""}
    volumes:
      - /sys/fs/cgroup:/sys/fs/cgroup:rw
    cgroupns_mode: host
    privileged: true
    pre_build_image: true
    # driver:vagrant
    box: wate/debian-11
    memory: 1024
    cpus: 1
provisioner:
  name: ansible
  options:
    diff: true
  config_options:
    defaults:
      hash_behaviour: merge
      stdout_callback: yaml
  playbooks:
    converge: ${MOLECULE_PLAYBOOK:-converge.yml}
