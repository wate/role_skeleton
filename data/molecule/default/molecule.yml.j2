---
dependency:
  name: galaxy
driver:
  name: ${DRIVER_NAME:-docker}
platforms:
  - name: bullseye
    groups:
      - family_debian
    children:
      - debian
    # driver:docker
    image: "geerlingguy/docker-debian11-ansible:latest"
    command: ${MOLECULE_DOCKER_COMMAND:-""}
    volumes:
      - /sys/fs/cgroup:/sys/fs/cgroup:ro
    privileged: true
    pre_build_image: true
    # driver:vagrant
    box: wate/debian-11
  - name: buster
    groups:
      - family_debian
    children:
      - debian
    # driver:docker
    image: "geerlingguy/docker-debian10-ansible:latest"
    command: ${MOLECULE_DOCKER_COMMAND:-""}
    volumes:
      - /sys/fs/cgroup:/sys/fs/cgroup:ro
    privileged: true
    pre_build_image: true
    # driver:vagrant
    box: wate/debian-10
  - name: centos7
    groups:
      - family_redhat
    children:
      - centos
    # driver:docker
    image: "geerlingguy/docker-centos7-ansible:latest"
    command: ${MOLECULE_DOCKER_COMMAND:-""}
    volumes:
      - /sys/fs/cgroup:/sys/fs/cgroup:ro
    privileged: true
    pre_build_image: true
    # driver:vagrant
    box: wate/centos-7
lint: |
  set -e
  yamllint .
  ansible-lint
provisioner:
  name: ansible
  options:
    diff: true
  config_options:
    defaults:
      hash_behaviour: merge
  playbooks:
    converge: ${MOLECULE_PLAYBOOK:-converge.yml}
